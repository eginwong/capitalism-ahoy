{
  "name": "capitalism-ahoy",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "chalk": "^4.1.0",
    "enquirer": "^2.3.6",
    "lodash": "^4.17.19"
  },
  "scripts": {
    "start": "node main.js",
    "test": "mocha --recursive -w",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov --disable=gcov",
    "coverage": "nyc --reporter=text --reporter=html mocha --recursive"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "codecov": "^3.7.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-strongloop": "^2.1.0",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "sinon": "^9.0.2",
    "yorkie": "^2.0.0"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 95,
    "lines": 95,
    "functions": 95,
    "statements": 95
  },
  "eslintConfig": {
    "extends": [
      "strongloop",
      "prettier"
    ],
    "ignorePatterns": [
      ".prettierignore",
      ".gitignore",
      "*.json",
      "*.lock",
      "*.md"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true,
      "mocha": true
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": [
      "pretty-quick --staged",
      "eslint . --fix"
    ]
  }
}
